<UserControl x:Class="sharpSync.UI.Additional.FileTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sharpSync.UI.Additional"
             
             mc:Ignorable="d" 
             Height="80" Width="80" DataContext="{Binding FileTemplateViewModel}">
    <Grid>
        <Image HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="60" Margin="10,0,0,0" Source="/sharpSync;component/Assets/icons/folder.png"/>
        <Label x:Name="nameLabel" Content="{Binding Path=FileName}" HorizontalAlignment="Left" Margin="0,56,0,0" VerticalAlignment="Center" Height="24" Width="80" HorizontalContentAlignment="Center" Foreground="White"/>
    </Grid>
</UserControl>
